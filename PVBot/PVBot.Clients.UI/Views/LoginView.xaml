<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="PVBot.Clients.UI.Views.LoginView"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:prism="http://prismlibrary.com"
	Title="{Binding Title}"
	Background="#622AE8">

	<ScrollView Padding="20" HorizontalScrollBarVisibility="Never">
		<Grid Margin="0,60,0,0" RowSpacing="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<StackLayout>
				<Label
					FontSize="Large"
					HorizontalTextAlignment="Center"
					Text="Hi!, I'm"
					TextColor="White" />
				<Label
					FontSize="46"
					HorizontalTextAlignment="Center"
					Text="Pvbot"
					TextColor="White" />
			</StackLayout>

			<Image Grid.Row="1" Source="icon_white" />

			<StackLayout Grid.Row="2" HorizontalOptions="Center">
				<Label
					FontSize="Title"
					HorizontalTextAlignment="Center"
					Text="Is there something I can help you?"
					TextColor="White" />
				<Button
					x:Name="LoginButton"
					Margin="25"
					Background="White"
					Command="{prism:NavigateTo '/ChatView'}"
					CornerRadius="25"
					Text="Yes, please!"
					TextColor="#622AE8" />
			</StackLayout>
		</Grid>
	</ScrollView>

</ContentPage>