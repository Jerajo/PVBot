<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
	x:Class="PVBot.Clients.Portable.Controls.MessageCard"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

	<Grid x:Name="MainContainer" x:FieldModifier="public">

		<Frame
			x:Name="MessageContainer"
			x:FieldModifier="public"
			Style="{StaticResource MessageContainerStyle}">
			<Label
				x:Name="MessageText"
				x:FieldModifier="public"
				Style="{StaticResource ChatTextStyle}"
				Text="{Binding Text}" />
		</Frame>

		<Grid x:Name="UserImageContainer" x:FieldModifier="public">
			<BoxView
				x:Name="UserImageBackground"
				x:FieldModifier="public"
				Style="{StaticResource ChatImageBackgroundStyle}" />
			<Image
				x:Name="UserImage"
				x:FieldModifier="public"
				AutomationProperties.Name="User image"
				Source="{Binding UserImage}"
				Style="{StaticResource ChatImageStyle}" />
		</Grid>

		<Label
			x:Name="DateLabel"
			x:FieldModifier="public"
			Style="{StaticResource ChatDateStyle}"
			Text="{Binding Date, StringFormat='{0:D} | {0:T}'}" />

	</Grid>
</ContentView>